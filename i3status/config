# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = "i3bar"
        colors = true
	color_separator = "#3971ed"
	color_good = "#198844"
	color_degraded = "#fba922"
	color_bad = "#cc342b"
        interval = 5
	separator = "  "
}

#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "disk /"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "memory"
order += "tztime local"
order += "volume master"


volume master {
	format = "Vol: %volume"
	format_muted = "Muted"
	device = "pulse"	
}

cpu_usage {
	format = "CPU Usage: %usage"
	max_threshold = 75
	degraded_threshold = 25
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %bitrate"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

cpu_temperature 0 {
	format = "CPU: %degrees°C"
	max_threshold = 60
}


battery 0 {
	threshold_type = "percentage"
	low_threshold = 20
	threshold_type = "percentage"
	last_full_capacity = true
	hide_seconds = false
        format = "%status %percentage %remaining"
}

disk "/" {
	threshold_type = "percentage_avail"
	low_threshold = 10
	
        format = "Disk: %percentage_avail free"
}

load {
        format = "Load: %1min"
	max_threshold = 4
}

memory {
        format = "Mem: Used: %used Avail: %available"
        threshold_degraded = "10%"
        threshold_critical = "5%"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
